<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div id="calc-canvas">
        <div id="output-area">
            <input id="calc-result" class="output">
        </div>
        <table>
            <tbody>
                <tr>
                    <td><button type="button" id="num1">1</button></td>
                    <td><button type="button" id="num2">2</button></td>
                    <td><button type="button" id="num3">3</button></td>
                    <td><button type="button" id="add-key">+</button></td>
